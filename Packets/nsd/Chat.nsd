#version 1.0;
#namespace Packets.Chat;

enum ChatChannel
{
    Whisper;
    Local;
    System;
    Global;
    Help;
    Trade;
}

message ChatPacket
{
    byte Version;
    ChatChannel Channel;
    uint? DestinationID;
    string Value;
}

message TextPacket
{
    byte Version;
    ChatChannel Channel;
    string Value;
}